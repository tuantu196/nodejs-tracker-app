{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "noEmit":true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
        "esm": true
    },
  "include": ["src"]
}